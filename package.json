{
  "name": "developer-toolbox",
  "displayName": "Developer Toolbox",
  "description": "Tools developers use on a day to day basis.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.93.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onView:developer-toolbox"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "developer-toolbox.showApiTester",
        "title": "Open Live API Tester"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "developer-toolbox",
          "title": "Developer Toolbox",
          "icon": "resources/toolbox-icon.svg"
        }
      ]
    },
    "views": {
      "developer-toolbox": [
        {
          "id": "toolboxView",
          "name": "Toolbox View"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test --extensionDevelopmentPath=./ --extensionTestsPath=test"
  },
  "devDependencies": {
    "@types/chai": "^4.3.19",
    "@types/mocha": "^10.0.7",
    "@types/node": "20.x",
    "@types/vscode": "^1.93.0",
    "@typescript-eslint/eslint-plugin": "^8.3.0",
    "@typescript-eslint/parser": "^8.3.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "chai": "^5.1.1",
    "eslint": "^9.9.1",
    "mocha": "^10.7.3",
    "ts-loader": "^9.5.1",
    "typescript": "^5.5.4",
    "webpack": "^5.94.0",
    "webpack-cli": "^5.1.4"
  }
}
